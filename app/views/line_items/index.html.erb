<h1>Listing line_items</h1>

<table>
  <thead>
    <tr>
      <th>Purchased on</th>
      <th>Cost</th>
      <th>Comment</th>
      <th>User</th>
      <th>Vendor</th>
      <th>Activity</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.purchased_on %></td>
        <td><%= line_item.cost %></td>
        <td><%= line_item.comment %></td>
        <td><%= line_item.user.name %></td>
        <td><%= line_item.vendor.name %></td>
        <td><%= line_item.activity.name %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

