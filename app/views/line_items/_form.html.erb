<%= form_for @line_item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :purchased_on, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :purchased_on %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cost, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cost, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comment, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:line_item, :user_id, User.all.order(:name), :id, :name, :prompt => true) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vendor_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:line_item, :vendor_id, Vendor.all.order(:name), :id, :name, :prompt => true) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :activity_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:line_item, :activity_id, Activity.all.order(:name), :id, :name, :prompt => true) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                line_items_path, :class => 'btn' %>
  </div>
<% end %>
